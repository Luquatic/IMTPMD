<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="imtpmd.jb_app_imtpmd.EcActivity">

    <TextView
        android:id="@+id/keuze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keuzevakken en projecten"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/stu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studiejaar 2"
        android:textSize="18sp"
        android:layout_below="@+id/stu1"
        android:layout_alignLeft="@+id/stu1"
        android:layout_alignStart="@+id/stu1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@+id/stu1"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/stu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studiejaar 1"
        android:textSize="18sp"
        android:layout_below="@+id/keuze"
        android:layout_alignRight="@+id/keuze"
        android:layout_alignEnd="@+id/keuze"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/keuze"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/stu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studiejaar 3"
        android:textSize="18sp"

        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/stu2" />

    <TextView
        android:id="@+id/stu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studiejaar 4"
        android:textSize="18sp"
        android:layout_below="@+id/stu2"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/stu3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/keuze_ec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/stu1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keuze" />

</android.support.constraint.ConstraintLayout>
